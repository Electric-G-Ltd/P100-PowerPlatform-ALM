{
  "name": "p100-vscode-extension-sdk",
  "displayName": "P100 VS Code Extension SDK",
  "description": "Modular SDK for VS Code customization and Microsoft Graph API integration.",
  "version": "0.0.1",
  "publisher": "electric-g-ltd",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/src/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "extension.listPlannerTasks",
        "title": "List Planner Tasks"
      },
      {
        "command": "extension.readCopilotSettings",
        "title": "Read Copilot Settings"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilotSettingsContainer",
          "title": "Copilot Settings",
          "icon": "resources/copilot.svg"
        }
      ]
    },
    "views": {
      "copilotSettingsContainer": [
        {
          "id": "copilotSettingsView",
          "name": "Copilot Settings",
          "icon": "$(gear)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Electric-G-Ltd/P100-PowerPlatform-ALM.git"
  },
  "dependencies": {
    "@microsoft/microsoft-graph-client": "^3.0.7"
  }
}
