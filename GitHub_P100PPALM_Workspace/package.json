{
  "name": "p100-vscode-extension-sdk",
  "displayName": "P100 VS Code Extension SDK",
  "description": "Modular SDK for VS Code customization and Microsoft Graph API integration.",
  "version": "0.0.1",
  "publisher": "electric-g-ltd",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:extension.listPlannerTasks",
    "onCommand:extension.readCopilotSettings",
    "onView:copilotSettingsView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.listPlannerTasks",
        "title": "List Planner Tasks"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Electric-G-Ltd/P100-PowerPlatform-ALM.git"
  },
  "dependencies": {
    "@microsoft/microsoft-graph-client": "^3.0.7"
  }
}
