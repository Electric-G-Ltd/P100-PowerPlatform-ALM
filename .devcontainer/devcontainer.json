{
  "name": "VS Code Extension SDK DevContainer",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        // mirror workspace settings for Insiders and non-Insiders parity
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "node_modules/typescript/lib",
        "csharp.suppressDotnetInstallWarning": true
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.powershell",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "visualstudioexptteam.vscodeintellicode"
      ]
    }
  },
    // verify dotnet and typescript are available, install workspace node deps if present, and restore solution dependencies
    "postCreateCommand": "dotnet --version && tsc --version || true && if [ -f \"GitHub_P100PPALM_Workspace/src/package-lock.json\" ]; then (cd GitHub_P100PPALM_Workspace/src && npm ci); elif [ -f \"GitHub_P100PPALM_Workspace/src/yarn.lock\" ]; then (cd GitHub_P100PPALM_Workspace/src && npm install); else echo 'No JS lockfile found; skipping npm install'; fi && dotnet restore",
  "remoteUser": "vscode"
}
