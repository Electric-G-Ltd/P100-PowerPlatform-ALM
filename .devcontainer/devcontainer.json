{
  "name": "P100 Power Platform ALM DevContainer",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.powershell",
        "ms-vscode.azurecli",
        "microsoft-IsvExpTools.powerplatform-vscode"
      ]
    }
  },
  "postCreateCommand": "pac install && dotnet tool restore && pwsh ./set_up/install-coredevtools.ps1"
}
